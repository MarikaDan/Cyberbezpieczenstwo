@model CyberBezp.Models.PasswordRequirementsViewModel

@{
	ViewData["Title"] = "Configure Password Requirements";
}

<h1>Configure Password Requirements</h1>

<form asp-action="ConfigurePassword" method="post">
	<div class="form-group">
		<label asp-for="RequireDigit" class="control-label"></label>
		<input asp-for="RequireDigit" />
		<span asp-validation-for="RequireDigit" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="RequireLowercase" class="control-label"></label>
		<input asp-for="RequireLowercase" />
		<span asp-validation-for="RequireLowercase" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="RequireNonAlphanumeric" class="control-label"></label>
		<input asp-for="RequireNonAlphanumeric" />
		<span asp-validation-for="RequireNonAlphanumeric" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="RequireUppercase" class="control-label"></label>
		<input asp-for="RequireUppercase"/>
		<span asp-validation-for="RequireUppercase" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="RequiredLength" class="control-label"></label>
		<input asp-for="RequiredLength" class="form-control" />
		<span asp-validation-for="RequiredLength" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="RequiredUniqueChars" class="control-label"></label>
		<input asp-for="RequiredUniqueChars" class="form-control" />
		<span asp-validation-for="RequiredUniqueChars" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}